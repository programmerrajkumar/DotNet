@page
@model ExceptionHandlingFeature.Pages.ErrorStatusCodeReExecuteModel
@{
}

Error @Model.ErrorStatusCode .



<h1 class="text-danger">Status Code: @Model.ErrorStatusCode</h1>
<h2 class="text-danger">@Model.ErrorMessage</h2>

@if (Model.ShowRequestId)
{
    <h3>Request ID</h3>
    <p>
        <code>@Model.RequestId</code>
    </p>
}

@if (Model.ShowOriginalURL)
{
    <h3>Original URL</h3>
    <p>
        <code>@Model.OriginalURL</code>
    </p>
}